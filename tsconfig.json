{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "allowJs": true,
        "checkJs": false,
        "strict": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@calendar/*": [
                "src/calendar/*"
            ],
            "@templates/*": [
                "src/templates/*"
            ]
        },
        "types": [
            "chrome",
            "jsdom"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "exclude": [
        "dist"
    ]
}